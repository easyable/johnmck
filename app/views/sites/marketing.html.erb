
<div class="article">
  <h2><span><%= @article.title %></span></h2>
  <div class="clr"></div>
  <p>Posted by <a href="admin@johnjmckelvie.com">Admin</a> <span>&nbsp;&bull;&nbsp;</span> Filed under: <%= @article.title %></p
  <p><%=@article.body %></p>
  <p><% if @article.tag_list.present? %> 
     <medium>Tagged: <%= @article.tag_list %></medium>
     <% end %></p>
  <p><a href="#"><strong>Comments, (<%= @article.comments.count %>)</strong></a> <span>&nbsp;&bull;&nbsp;</span><%= @article.published_at.strftime("%m/%d/%Y") %><span>&nbsp;&bull;&nbsp;</span></p>
</div>
<div id="comments">
  <h2></span> Comments</h2>
  <div class="clr"></div>
  <div id="comments">
    <%= render @article.comments %>
 </div>
 
</div>

<div id="comments">
  <h2><span>Leave a</span> Comment</h2>
  <div class="clr"></div>
  <%= form_for([@article, @article.comments.new]) do |f| %>
    <ol>
      <li>
        <label for="name">Name (required)</label>
        <%= f.text_field :name %>
      </li>
      <li>
        <label for="email">Email Address (required)</label>
        <%= f.text_field :email %>
      </li>
      <li>
        <label for="company">Company</label>
        <%= f.text_field :company %>
      </li>
      <li>
        <label for="message">Your Message</label>
        <%= f.text_area :body %>
      </li>
      <li>
        <input type="image" name="imageField" id="imageField" src="images/submit.gif" class="send"/>
        <div class="clr"></div>
      </li>
    </ol>
  <% end %>
</div>


