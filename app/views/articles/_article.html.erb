<%= div_for article do %>
  <h3>
    <%= link_to article.title, article %>
    <%= article.published_at.strftime("%m/%d/%Y") %>    
    <% if current_user %> 
      <span class='actions'>
        <%= link_to "Edit", edit_article_path(article) %> 
        <%= button_to "Delete", article, :confirm => "Are you sure?", :method => :delete %>
        
      </span>
    <% end %>
  </h3>
  <%= simple_format article.body %>
<% end %>