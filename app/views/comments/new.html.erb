<%= form_for([@article, @article.comments.new], :remote => true,
:html => {:style => 'display: none;'}) do |f| %>
  <div class="field">
    <%= f.label :name %><br/>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :email %><br/>
    <%= f.text_field :email %>
  </div>
  <div class="field">
	<%= f.label :company%><br/>
	<%= f.text_field :company%><br/>
  </div>
  <div class="field">
    <%= f.label :body %><br/>
    <%= f.text_field :body %>
  </div>

  <div class="field">
    <%= f.submit 'Add '%>
  </div>
<% end %>